{{#each categories}}
<div class="category" data-id="{{id}}">
  <div class="header">
    <i class="fa fa-{{icon}} icon"></i> {{title}}
  </div>
  {{#each contents}}
  <div class="shortcut{{#if important}} important{{/if}}" data-id="{{id}}">
    <i class="fa fa-{{icon}} icon"></i>
    <i class="fa fa-refresh fa-spin fa-fw busy"></i>
    {{title}}
    {{#if link}}<i class="fa fa-chevron-right"></i>{{/if}}
  </div>
  {{/each}}
</div>
{{/each}}
